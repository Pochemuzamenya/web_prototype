      <div class="contact form">
        <h3>Отправить сообщение</h3>
        <form method="post" action="/">
          <div class="formBox">
            <div class="row50">
              <div class="inputBox">
                <span>Имя</span>
                <input name="firstName" type="text" placeholder="Имя" />
              </div>
              <div class="inputBox">
